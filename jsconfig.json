{
	"compilerOptions": {
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vite/client"],
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"paths": {
			"@components": ["./components/index"],
			"@constants": ["./constants/index"],
			"@contexts": ["./contexts/index"],
			"@services": ["./services/index"],
			"@reducers/*": ["./reducers/*"],
			"@layout/*": ["./layout/*"],
			"@hooks": ["./hooks/index"],
			"@utils": ["./utils/index"],
			"@pages": ["./pages/index"]
		}
	}
}
